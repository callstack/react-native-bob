{
  "name": "<%- project.slug -%>",
  "version": "0.0.0",
  "description": "<%- project.description %>",
  "main": "src/index",
<% if (project.arch !== 'legacy') { -%>
  "codegenConfig": {
    "name": "RN<%- project.name -%><%- project.view ? 'View': '' -%>Spec",
    "type": <%- project.view ? '"all"': '"modules"' %>,
    "jsSrcsDir": "src"
  },
<% } -%>
  "author": "<%- author.name -%> <<%- author.email -%>> (<%- author.url -%>)",
  "license": "UNLICENSED",
  "homepage": "<%- repo -%>#readme"
}
