{
  "name": "react-native-bob-monorepo",
  "repository": "git@github.com:callstack/react-native-builder-bob.git",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/callstack/react-native-builder-bob/blob/main/README.md",
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "lint": "eslint \"packages/**/*.{js,ts,tsx}\"",
    "typescript": "lerna run typescript",
    "build": "lerna run build"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7"
  },
  "optionalDependencies": {
    "jetifier": "^1.6.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-config-satya164": "^3.1.8",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "satya164",
    "root": true,
    "env": {
      "node": true
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "packages/cli/lib/",
    "packages/builder/lib/",
    "packages/builder/templates/"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
